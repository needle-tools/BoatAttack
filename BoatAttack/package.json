{
  "name": "my-project",
  "version": "1.0.0",
  "scripts": {
    "dev": "vite",
    "dev-host": "vite --host",
    "build": "tsc && vite build && npm run cpdir",
    "build-debug": "tsc && vite build --debug && npm run cpdir",
    "build-production": "npm run build && npm run pack-gltf",
    "serve": "vite preview",
    "cpdir": "copy-files-from-to",
    "pack-gltf": "node node_modules/needle.tiny.engine/plugins/gltf-packer.mjs"
  },
  "dependencies": {
    "cannon-es": "^0.18.0",
    "cannon-es-debugger": "^0.1.4",
    "crypto-js": "^4.1.1",
    "dat.gui.image": "^1.0.4",
    "flatbuffers": "^2.0.4",
    "needle.tiny.engine": "../modules/needle-tiny/js",
    "peerjs": "^1.3.2",
    "three": "file:../modules/needle-tiny/modules/three",
    "three-mesh-ui": "^6.0.1",
    "uuid": "^8.3.2",
    "websocket-ts": "^1.1.1"
  },
  "devDependencies": {
    "@gltf-transform/cli": "^1.2.4",
    "@gltf-transform/functions": "^1.2.4",
    "@types/three": "^0.134.0",
    "copy-files-from-to": "^3.2.2",
    "draco3dgltf": "^1.5.0",
    "glob": "^7.2.0",
    "typescript": "^4.3.2",
    "vite": "^2.6.4",
    "vite-plugin-compression": "^0.3.6",
    "rollup-plugin-visualizer": "^5.5.2"
  },
  "copyFiles": [
    {
      "from": "assets/**/*.*",
      "to": "dist/assets/"
    },
    {
      "from": "node_modules/needle.tiny.engine/include/**/*.*",
      "to": "dist/include/"
    },
    {
      "from": "node_modules/needle.tiny.engine/include/**/*.*",
      "to": "./include/"
    },
    {
      "from": "include/**/*.*",
      "to": "dist/include/"
    }
  ]
}
